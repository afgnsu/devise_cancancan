<h2><i class='fa fa-user'></i>&nbsp;用戶註冊</h2>

<div class="row">
  <div class="col-lg-4 col-lg-offset-4">

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%# devise_error_messages! %>

    <%= f.email_field :email, label: 'Email信箱', autofocus: true %>

    <%= f.text_field :name, label: '用戶姓名' %>

    <%= f.password_field :password, label: '密碼', autocomplete: "off", placeholder: '密碼最少要8位數' %>

    <%= f.password_field :password_confirmation, label: '確認密碼', autocomplete: "off" %>

  <br>
    <%= f.submit "送出", class: 'btn btn-lg btn-primary' %>
    <%= render "devise/shared/links" %>

<% end %>

<%# render "devise/shared/links" %>

</div>
</div>
